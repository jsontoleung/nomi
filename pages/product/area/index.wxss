/* pages/product/area/index.wxss */
.page{
  width:100%;
  background: #f2f2f2;
  padding-bottom: 60px;
  /* height:100%;
  box-sizing: border-box; */
  position: absolute;
}

.btn-box {
    width:100%;
    height:1200rpx;
    background-color: #fff;
}
.btn-box .name {
    width:92%;
    font-size: 28rpx;
    color:#303030;
    padding:30rpx 5%;
}

.btn-shouhuo{
  width:92%;
  height:80rpx;
  position: relative;
  border-bottom: 1rpx solid #f0eff5;
  background: #fff;
  margin-left: 4%;
  padding: 1% 0;
}
.shoushuo-ren{
  width:19%;
  font-size: 28rpx;
  color:#333;
  margin-left: 10rpx;
  padding-top: 20rpx;
}
.btn-shouhuo input{
  width:76%;
  /* height:36rpx; */
  font-size: 28rpx;
  position: absolute;
  right:20rpx;
  top:25%;
  text-align: right;
}
.picker{
  float:right;
  font-size: 28rpx;
  color:#333;
  position: absolute;
  right:20rpx;
  top:20rpx;
}
.btn-jian {
    width:24rpx;
    height:24rpx;
}
.btn-button{
  width:85%;
  font-size: 28rpx;
  color:#fff;
  height:70rpx;
  margin-top: 20rpx;
}

.warmming{
    width: 92%;
    margin:30rpx 5%;
    font-size: 26rpx;
    color:#58b9f9;
}

.get-class{
  width:92%;
  height:90rpx;
  background-color: #00FF7F;
  font-size: 30rpx;
  color:#fff;
  line-height: 95rpx;
  border-radius: 0%;
  margin-top: 30rpx;
}
.get-class.hover-btn {
    background-color: #98FB98;
}

.add-class{
  width:92%;
  height:90rpx;
  background-color: #f5a6bc;
  font-size: 30rpx;
  color:#fff;
  line-height: 95rpx;
  border-radius: 0%;
  margin-top: 30rpx;
}

.hover-btn {
    background-color: red;
}