.page{
  width:100%;
  background: #f2f2f2;
  padding-bottom: 60px;
  position: absolute;
}
.btn-bg {
    width:100%;
    height:400rpx;
    /* background-color: #232323; */
    background-image: url(https://www.nomiyy.com/uploads/category/20190825//5d62af9a5abcd.png);
}
.btn-bg .bg-title1 {
    width:100%;
    font-size: 26rpx;
    color:#fff;
    text-align: center;
    display: inline-block;
    margin-top: 130rpx;
}
.btn-bg .bg-title1 text {
    color:#fcbec9;
}
.btn-bg .bg-title2 {
    width:100%;
    font-size: 26rpx;
    color:#fff;
    text-align: center;
}
.btn-bg .bg-dredge {
    width:48%;
    font-size: 28rpx;
    color:#fff;
    padding:5rpx 15rpx;
    text-align: center;
    margin-top: 20rpx;
    margin-left: 25%;
    background-color: #e1ce9a;
    border-radius: 13px;
}
.btn-bg .bg-dredge text {
    font-size: 30rpx;
    font-weight: bold;
}
.btn-bg .hover-btn {
    background-color: #c0a06d;
}



.btn-privilege {
    width:92%;
    height:90rpx;
    margin-left: 4%;
    margin-top: -50rpx;
    background-color: #be9e6b;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
}
.btn-privilege .pri-left {
    font-size: 30rpx;
    font-weight: bold;
    float:left;
    line-height: 78rpx;
    text-indent: 20rpx;
}

.top {
    width:92%;
    margin-left: 4%;
    padding-bottom:90%;
    background-color: #232323;
}
.top-box {
    width:49%;
    height:250rpx;
    padding-bottom: 5%;
    margin-top: 5%;
    float:left;
}
.top-box-img {
    width:90rpx;
    height: 90rpx;
    border-radius: 100%;
    background-color: #be9d6a;
    margin: 0 auto;
    font-size: 58rpx;
    text-align: center;
    color:#fff;
}
.top-box-name {
    width:100%;
    font-size: 26rpx;
    text-align: center;
    color:#fff;
    margin-top: 10rpx;
}
.top-box-desc {
    width:80%;
    font-size: 24rpx;
    text-align: center;
    color:#fff;
    margin: 0 auto;
}


.footer {
    width:100%;
    height:80rpx;
    position: fixed;
    bottom: 0;
    background-color: #be9d6a;
    font-size: 18px;
    text-align: center;
    color:#fff;
    line-height:86rpx;
}
.footer text {
    font-size: 20px;
    font-weight: bold;
}