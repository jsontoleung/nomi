.page{
  width:100%;
  background: #eeeeee;
  padding-bottom: 15%;
  box-sizing: border-box;
  position: absolute;
}
.search {
  height: 100rpx;
  display: block;
  padding: 20rpx 30rpx 20rpx;
  width: 100%;
  box-sizing: border-box;
}
.search .name {
  position: relative;
  text-align:center;
  background-color: #fff;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
  color:#888888;
}

.search image {
  width:22rpx;
  height:22rpx;
  position: absolute;
  top:39rpx;
  left:224rpx;
}


swiper {
    width:92%;
    height:1290rpx;
    margin-left: 4%;
    position: relative;
    padding:30rpx 0rpx;
}
swiper swiper-item {
    background: #fff;
    border-radius: 20rpx;
}
swiper-item .type {
  width:90%;
  font-size: 30rpx;
  font-weight: bolder;
  margin: 22rpx 30rpx 0rpx;
  color:#4B0082;
}
swiper-item .box-con {
  width:92%;
  height: 250rpx;
  background-color: #f2f2f2;
  border-radius: 10rpx;
  margin: 20rpx auto;
  position:relative;
}
swiper-item .box-con image {
  width:150rpx;
  height:210rpx;
  background-color: #000000;
  border-radius: 10rpx;
  margin:20rpx 20rpx 0 30rpx;
  float:left;
}
swiper-item .box-con .title {
  width:66%;
  font-size: 22rpx;
  float:left;
  margin-top: 20rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
swiper-item .box-con .con-bottom {
  width:68%;
  height:70rpx;
  float:left;
  position:absolute;
  top:177rpx;
  left:200rpx;
}

swiper-item .box-con .con-bottom .name {
  width:70%;
  font-size: 16rpx;
  color:#727272;
  float:left;
  margin-left: 10rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

swiper-item .box-con .con-bottom .num {
  float:right;
  font-size: 14rpx;
  color:#727272;
  line-height: 25rpx;
  margin-right: 30rpx;
}
swiper-item .more {
  width:100%;
  font-size: 30rpx;
  color: #f5a6bc;
  text-align: center;
}





/* 弹窗 */
.btn-popup {
    width:60%;
    padding-top: 40rpx;
    padding-bottom: 60rpx;
    position: fixed;
    top:10%;
    margin-left: 20%;
    border-radius: 14rpx;
}
.btn-popup .deletes {
    width:64rpx;
    height:64rpx;
    position:absolute;
    top:5%;
    right:2%;
}
.btn-popup .cover {
    width:100%;
    height:850rpx;
}
