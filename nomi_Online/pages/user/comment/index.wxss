.page{
  width:100%;
  background-color: #f2f2f2;
  padding-bottom: 30rpx;
  /* height:100%;
  box-sizing: border-box; */
  position: absolute;
}

.btn-box {
    width:100%;
    background-color: #fff;
    padding:30rpx 0rpx;
    margin:30rpx 0rpx;
}
.btn-box .myself {
    width:92%;
    margin-left: 4%;
}
.btn-box .myself .headimg {
    width:70rpx;
    height:70rpx;
    border-radius: 100%;
    float:left;
}
.btn-box .myself .name {
    font-size: 26rpx;
    color:#262626;
    text-indent:18rpx;
}
.btn-box .myself .time {
    font-size: 22rpx;
    color:#666666;
    text-indent:18rpx;
}
.btn-box .reply {
    width:92%;
    margin-left: 4%;
    font-size: 28rpx;
    margin-top: 10rpx;
}
.btn-box .reply .rname {
    color:#4bbcdd;
}
.btn-box .bottom {
    width:92%;
    height:150rpx;
    margin:15rpx auto;
    background-color: #f2f2f2;
}
.btn-box .bottom .cover {
    width:150rpx;
    height:150rpx;
    float:left;
}
.btn-box .bottom .aname {
    width:72%;
    float:left;
    font-size: 28rpx;
    margin:18rpx 20rpx 0rpx;
}
.btn-box .bottom .title {
    width:72%;
    float:left;
    font-size: 22rpx;
    color:#666666;
    margin-left: 20rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}