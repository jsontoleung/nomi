    border-radius:14rpx;
}
.combo-box .combo-nameThr {
    float:left;
    width: 31%;
    height:200rpx;
    margin:2% 1%;
    border-radius:14rpx;
}
.combo-box .combo-nameFor {
    float:left;
    width: 48%;
    height:200rpx;
    margin:2% 1%;
    border-radius:14rpx;
}
/* 套餐点击--end */